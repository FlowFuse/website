const links = [
  { label: 'About', href: 'https://flowfuse.com/about/' },
  { label: 'Team', href: 'https://flowfuse.com/team/' },
  { label: 'Jobs', href: 'https://boards.greenhouse.io/flowfuse' },
  { label: 'Handbook', href: 'https://flowfuse.com/handbook/' },
  { label: 'Privacy', href: 'https://flowfuse.com/privacy-policy/' },
