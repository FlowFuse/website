<style>
  .ff-footer {
    background-color: var(--sl-color-gray-6);
    border-top: 1px solid var(--sl-color-gray-5);
    padding: 2rem 1rem;
    margin-top: 2rem;
  }

  .footer-content {
    max-width: 72rem;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .footer-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem 1.5rem;
    justify-content: center;
  }

  .footer-links a {
    color: var(--sl-color-text);
    text-decoration: none;
    font-size: 0.875rem;
  }

  .footer-links a:hover {
    color: var(--sl-color-text-accent);
    text-decoration: underline;
  }

  .footer-social {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    align-items: center;
  }

  .footer-social a {
    color: var(--sl-color-gray-3);
    transition: color 0.2s ease;
  }

  .footer-social a:hover {
    color: var(--sl-color-text-accent);
  }

  .footer-social svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  .footer-copyright {
    text-align: center;
    color: var(--sl-color-gray-3);
    font-size: 0.75rem;
  }

  @media (min-width: 50rem) {
    .footer-links {
      gap: 0.5rem 2rem;
    }
  }
</style>
