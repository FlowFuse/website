                                const sliderEl = document.querySelector("#range")
                                const sliderValue = document.querySelector(".value")
                                const priceIntElement = document.querySelector("#price-int");
                                const priceDecElement = document.querySelector("#price-dec");
                                const annualPriceElement = document.querySelector("#annual-price");

                                sliderEl.addEventListener("input", (event) => {
                                    let tempSliderValue = event.target.value; 

                                    // Handle the special cases for the first values
                                    if (tempSliderValue == 2) {
                                        tempSliderValue = 5;
                                    } else if (tempSliderValue > 2 && tempSliderValue < 5) {
                                        tempSliderValue = 5;
                                    } else if (tempSliderValue > 5) {
                                        tempSliderValue = Math.ceil(tempSliderValue / 5) * 5;
                                    }

                                    sliderValue.textContent = tempSliderValue;
                                    
                                    const progress = (tempSliderValue / sliderEl.max) * 100;
                                    
                                    sliderEl.style.background = `linear-gradient(to right, #9CA3AF ${progress}%, #374151 ${progress}%)`;

                                    // Calculate the discount
                                    const discountSteps = tempSliderValue > 5 ? (tempSliderValue - 5) / 5 : 0;
                                    const discount = discountSteps * 0.01;

                                    // Calculate the price
                                    const basePrice = 250;
                                    const discountedPriceAnnual = basePrice * (1 - discount);
                                    const discountedPriceMonthly = discountedPriceAnnual / 12;

                                    // Update the price elements
                                    const [intValue, decValue] = discountedPriceMonthly.toFixed(2).split(".");
                                    priceIntElement.textContent = intValue;
                                    priceDecElement.textContent = decValue;

                                    // Update the annual price
                                    annualPriceElement.innerHTML = `/instance a month <br>Billed annually at $${discountedPriceAnnual.toFixed(2)}<br \\>`;
                                })

                                // Trigger the input event manually to update the initial value
                                sliderEl.dispatchEvent(new Event('input'));
                            </script>
