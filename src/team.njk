---
title: Meet the Team
layout: layouts/page.njk
nohero: true
---
<div class="team w-full pb-24">
    <div class="container m-auto text-left max-w-4xl">
        <div class="grid grid-cols-1 grid-gap-4 sm:grid-cols-2">
            {%- for member in team.members -%}
            <div class="w-full my-2 pb-6 pr-16 text-center sm:text-left">
                <div class="name">
                    <h5>{{ team[member].name }}</h5>
                    {% if team[member].country %}
                    <span class="group flex px-4 sm:pr-2 pl-4">
                        {{ team[member].country | countryFlag }}
                    </span>
                    {% endif %}
                </div>
                <div class="role">{{ team[member].title }}</div>
                <div class="socials">
                    {# {% if team[member].country %}
                    <span class="group cursor-default flex px-4 sm:pr-2 pl-0">
                        {{ team[member].country | countryFlag }}
                    </span>
                    {% endif %} #}
                    {% if team[member].email %}
                    <span class="">
                        <a href="mailto:{{ team[member].email }}">
                            {% include "components/mail.njk" %}
			</a>
                    </span>
                    {% endif %}
                    {% if team[member].twitter %}
                    <span class="">
                        <a class="" target="_blank" href="https://twitter.com/{{ team[member].twitter }}">
                            {% include "components/twitter.njk" %}
                        </a>
                    </span>
                    {% endif %}
                    {% if team[member].github %}
                    <span class="">
                        <a class="" target="_blank" href="https://github.com/{{ team[member].github }}">
                            {% include "components/github.njk" %}
                        </a>
                    </span>
                    {% endif %}
                    {% if team[member].linkedin %}
                    <span class="">
                        <a class="" target="_blank" href="https://www.linkedin.com/in/{{ team[member].linkedin }}">
                            {% include "components/linkedin.njk" %}
                        </a>
                    </span>
                    {% endif %}
                    {% if team[member].blog %}
                    <span class="">
                        <a class="" target="_blank" href="{{ team[member].blog }}">
                            {% include "components/rss.njk" %}
                        </a>
                    </span>
                    {% endif %}
                </div>
            </div>
            {%- endfor -%}
        </div>
    </div>
</div>
