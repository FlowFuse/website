                    <a class="ff-btn ff-btn--primary min-h-[40px]" href="/contact-us/" onclick="capture('cta-contact-us', {'position': 'secondary'})">CONTACT US</a>
                    <a class="ff-btn ff-btn--primary-outlined min-h-[40px]" href="https://app.flowfuse.com/account/create" onclick="capture('cta-try-it-out', {'position': 'secondary'})">TRY IT OUT</a>
                </div>
            </div>
            <div class="max-md:hidden flex ff-image-rounded md:max-w-[350px] m-auto">
                {% image "./images/home/app-maturity-diagram.png", "App maturity diagram", [350] %}
