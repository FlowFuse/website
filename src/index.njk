---
layout: default
sitemapPriority: 1.0
---
<!--Hero Content-->
<div class="w-full px-6 pb-24 mt-12 ff-bg-flows">
    <div class="container m-auto text-left max-w-screen-lg lg:flex lg:flex-row lg:items-start lg:justify-between lg:gap-6">
        <div class="max-w-xl mx-auto lg:mx-0 lg:my-auto lg:py-10 lg:max-w-[600px]">
            <h1 class="text-gray-50 max-w-xl m-auto lg:m-0 text-center lg:text-left">
                {{ site.messaging.tagLine }}
            </h1>
            <p class="mt-6 text-gray-400 text-lg font-normal text-center lg:text-left">
                {{ site.messaging.subtitle }}
            </p>
            <div class="flex flex-col">
                <div class="m-auto mt-7 flex gap-4 items-center justify-center lg:items-start lg:justify-start lg:m-0 flex-row">
                    <a class="ff-btn ff-btn--primary flex flex-col mb-6" href="{{ site.appURL }}/account/create"
                        onclick="capture('cta-try-it-now', {'position': 'hero'})">
                        <span class="text-base uppercase items-center">
                            TRY IT OUT
                        </span>
                    </a>
                    <a class="ff-btn flex flex-col mb-6" href="/contact-us"
                        onclick="capture('cta-contact-us', {'position': 'hero'})">
                        <span class="text-base flex gap-2 uppercase items-center text-gray-200">
                            Contact us
                            {% include "components/icons/arrow-right.svg" %}
                        </span>
                    </a>
                </div>
            </div>
        </div>
        <div class="flex justify-center items-end m-auto lg:mx-0">
            <lite-youtube videoid="eR0P40sxge8" style="background-image: url('images/thumbnail-nick-flowfuse.png'); width: 620px; height: 360px" class="max-w-xs max-h-48 border-4 rounded-md sm:max-w-none sm:max-h-full lg:max-w-lg lg:max-h-72"></lite-youtube>
        </div>
    </div>
</div>

{% include "components/divider-flow--top-red--light.njk" %}

<!-- Secondary Content -->
<div class="w-full ff-bg-light px-6 pt-8">
    <div class="container m-auto text-center max-w-5xl">
        <div class="m-auto mb-12 w-full text-center mb-12 sm:mb-16">
            {% include "social-proof.njk" %}
        </div>
        <div class="m-auto w-full text-center mt-20 md:mb-8 md:mt-24">
            <h2>Why FlowFuse?</h2>
        </div>
    </div>
</div>
<div class="about w-full ff-bg-light pt-10 pb-12">
    <div class="container mx-auto max-w-lg sm:max-w-screen-lg flex flex-col md:flex md:flex-row md:flex-wrap gap-y-14">
        {% for item in home %}
        <div class="relative w-full px-4 mx-auto {% if loop.last %}md:w-full{% else %}md:w-1/2{% endif %}">
            <div class="flex flex-col items-center md:items-start z-10">
                <div class="flex flex-col justify-center md:justify-start items-start gap-6 md:min-h-28 w-full">
                    <div class="max-w-[64px] w-full max-w-sm md:w-1/5 sm:max-h-full h-16 m-auto md:m-0">
                        {% set imageSrc = ['./images/pictograms/', item.image, '.png'] | join %}
                        {% set imageDescription = ['Image depicting ', item.imagealt] | join %}
                        {% image imageSrc, imageDescription, [64] %}
                    </div>
                    <div class="flex flex-row gap-3 m-auto md:m-0 text-center md:text-left">
                        <h5>
                            <div class="text-xl">{{ item.title | safe }}</div>
                        </h5>
                    </div>
                </div>
                <div>
                    <p class="text-center md:text-left">{{ item.content }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
<div class="w-full ff-bg-light text-white -mb-1">
    {% include "components/dividers/light-grey-curve.svg" %}
</div>
<!-- Deployment Options -->
<div class="w-full ff-bg-light pt-0 md:pt-0 md:px-0">
    <div class="bg-white pb-10 md:pb-8 px-6">
    <div class="container m-auto text-center max-w-4xl">
        <div class="m-auto pt-12 w-full text-center">
            <h2>Get Started with FlowFuse</h2>
            <p class="text-white font-light -mt-1">Explore our <a href="/pricing/">pricing</a>.</p>
        </div>
        <div class="sm:mt-10 md:mt-4 w-full max-w-4xl text-center flex flex-wrap gap-2 justify-around">
            <div class="w-full px-3 mt-4 sm:w-72 md:mt-0 css-full">
                <div class="w-24 m-auto">
                    {% image "./images/pictograms/book-a-demo_red.png", "Icon representing a booked demo.", [96] %}
                </div>
                <h5 class="flex justify-center">Learn More</h5>
                <label class="font-light mt-2 block">The best way to learn about FlowFuse is to book a demo! Weâ€™d love to show you how FlowFuse can transform your business.</label>
                <a class="mt-4 mb-10 md:mb-0 ff-btn ff-btn--primary uppercase inline-block" href="/book-demo/" onclick="capture('cta-book-a-demo', {'position': 'secondary'})">Book a Demo</a>
            </div>
            <div class="w-full px-3 mt-4 sm:w-72 md:mt-0 flex flex-col items-center justify-between">
                <div>
                <div class="w-24 m-auto">
                    {% image "./images/pictograms/enterprise_red.png", "Graphic image representing 'Infrastructure'.", [96] %}
                </div>
                <h5 class="flex justify-center">Get Started Today</h5>
                </div>
                <label class="font-light mt-2 block">Ready to get started? Start exploring the FlowFuse platform in less than a minute.</label>
                <a class="mt-4 ff-btn ff-btn--primary-outlined uppercase inline-block" href="{{ site.appURL }}/account/create" onclick="capture('cta-try-it-now', {'position': 'secondary'})">Try it out</a>   
            </div>
        </div>
    </div>
    </div> 
</div>
<div class="w-full bg-white text-gray-50 -mb-1">
    {% include "components/dividers/divider-flow--top-grey.svg" %}
</div>
<!-- FF Content -->
<div class="ff-bg-light w-full pb-20 md:px-0">
    <div class="container m-auto max-w-5xl pt-6 md:pt-3 px-6">
        <h3 class="text-center w-full font-medium">Explore more about FlowFuse and Node-RED</h3>
        <div class="w-full max-w-md md:max-w-none mx-auto flex flex-col md:grid md:grid-cols-3 gap-6 pt-10">
            {%- for item in collections.posts | sort(attribute='item.date') | reverse | limit(1) -%}
            <div class="w-full my-2 border rounded-lg hover:drop-shadow-lg hover:border-red-600 transition ease-in-out duration-300 bg-white">
                <a href="{{ item.url }}" class="w-full flex flex-col group hover:no-underline">
                    <div class="">
                            {% if item.data.image %}
                            <div class="relative border-b">
                                <div class="w-full ff-image-cover ff-image-top-rounded">
                                {% set imageSrc = ["./", item.data.image ] | join %}
                                {% set imageDescription = ["Image representing ", item.data.title] | join %}
                                {% image imageSrc, imageDescription, [285] %}
                            </div>
                            {% else %}
                            {{ item.url | generatePostSVG |safe}}
                            {% endif %}
                        </div>
                        <div class="p-5 pt-0">
                        <h5 class="mt-4 mb-0 font-normal text-lg"><span class="text-gray-500 group-hover:text-red-600">{{ item.data.title }}</span></h5>
                        <div class="text-sm py-1 text-gray-500 font-light">
                            {{ item.data.description | excerpt | safe }}
                        </div>
                        </div>
                    </div>
                </a>
            </div>
            {%- endfor -%}
            {%- for item in collections.webinar | sort(attribute='item.date') | reverse | limit(1) -%}
            <div class="w-full my-2 border rounded-lg hover:drop-shadow-lg hover:border-red-600 transition ease-in-out duration-300 bg-white">
                <a href="{{ item.url }}" class="w-full flex flex-col group hover:no-underline">
                        <div class="">
                            {% if item.data.image %}
                            <div class="relative border-b pt-3">
                                <div class="bg-white w-full ff-image-cover ff-image-top-rounded">
                                {% set imageSrc = ["./", item.data.image ] | join %}
                                {% set imageDescription = ["Image representing ", item.data.title] | join %}
                                {% image imageSrc, imageDescription, [285] %}
                            </div>
                            {% else %}
                            {{ item.url | generatePostSVG |safe}}
                            {% endif %}
                        </div>
                        <h5 class="mt-4 mb-0 font-normal text-lg p-5 pt-0"><span class="text-gray-500 group-hover:text-red-600">{{ item.data.title }}</span></h5>
                    </div>
                </a>
            </div>
            {%- endfor -%}
            <div class="w-full my-2 border rounded-lg hover:drop-shadow-lg hover:border-red-600 transition ease-in-out duration-300 bg-white flex flex-col">
                <a id="sign-up"></a>
                <h4 class="w-full bg-gray-200 font-medium text-xl p-5 rounded-t-lg">Sign up for our monthly email updates</h4>
                <div class="p-5 pb-0 -mb-1">
                    {% include "hubspot/hs-newsletter.njk" %}
                </div>
            </div>
        </div>
    </div>
</div>