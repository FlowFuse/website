<li class="w-full md:w-1/3 my-2 px-3 pb-6 border-b mt-6 flex flex-col justify-between">
    <a href="{{ item.url }}" class="w-full flex flex-col group hover:no-underline">
        <div>
            <div class="mb-2">
                {%- for tag in item.data.tags -%}
                    {% if tag !== "blueprints" %}
                        <label class="text-gray-400">{{ tag | replace('-', ' ') | replace('20', '2.0') | title }}</label>
                    {% endif %}
                {%- endfor %}
            </div>
            <div class="ff-blog-tile">
                <div class="w-full h-auto">
                    {% tileImage item, "./images/og-blog.jpg", "Image with logo and the slogan: Elevate Node-RED with Flowfuse", 285 %}
                </div>
            </div>
            <h3 class="mt-6 mb-0 font-medium group-hover:underline">{{ item.data.title }}</h3>
        </div>
        <div class="text-sm prose prose-blue md:prose-md py-1 mt-3">
            {{ item.data.description | excerpt | safe }}
        </div>
    </a>
    <a href="https://app.flowfuse.com/deploy/blueprint?blueprintId={{ item.data.blueprintId }}" class="ff-btn ff-btn--primary-outlined flex flex-col mb-6 mt-4 uppercase" target="_blank">Deploy to FlowFuse</a>
</li>
