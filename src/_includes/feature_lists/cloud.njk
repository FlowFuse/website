<div class="ff-feature-table max-w-3xl m-auto">
    <div class="divider-v"></div>
    <div class="ff-feature-table-section">
        {% for col in columns %}
        <h4>{{ col.product | safe }}</h4>
        {% endfor %}
    </div>
    <div class="ff-feature-table-section">
        {% for col in columns %}
        <ul class="ff-feature-table--pricing">
            <div class="divider-h {{ 'reverse' if loop.index0 === 0 }}"></div>
            {{ col.pricing | safe }}
        </ul>
        {% endfor %}
    </div>
    {% for section in columns[0].sections %}
    {% set sectionIndex = loop.index0 %}
    <div class="ff-feature-table-section">
        {% for col in columns %}
        <ul>
            <div class="divider-h {{ 'reverse' if loop.index0 === 0 }}"></div>
            {% for feature in col.sections[sectionIndex] %}
                <li>
                    {% if feature.icon === "check" %}
                    <svg title="Available Now" class="ff-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path strokeLinecap="round" strokeLinejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                    {% elif feature.icon === "time" %}
                    <svg title="Coming Soon" class="ff-icon"  xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    {% elif feature.icon === "addon" %}
                    <svg title="Available as an Add-On" class="ff-icon"  xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
                    </svg>
                    {% endif %}
                    {{ feature.label }}
                </li>
            {% endfor %}
        </ul>
        {% endfor %}
    </div>
    {% endfor %}
</div>