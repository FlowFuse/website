---
layout: layouts/base.njk
---
<!--Hero Content-->
<div class="w-full page">
    {% if title %}
        {% if nohero %}
        <div class="container m-auto text-center max-w-4xl flex mt-12 mb-6">
        {% else %}
        <div class="hero container m-auto text-center max-w-4xl flex mt-12 mb-32">
        {% endif %}
            <div class="text-left pr-32">
                <h1>{{ title }}</h1>
                {% if subtitle %}
                <h4>{{ subtitle | safe }}</h4>
                {% endif %}
                {% if (description and not hideDescription) %}
                <div>{{ description | safe }}</div>
                {% endif %}
            </div>
            {% if heroimg %}
            <img src="{{heroimg}}"/>
            {% endif %}
        </div>
    {% endif %}
    <div class="content">
        {{ content | safe }}
    </div>
</div>