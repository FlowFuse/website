---
layout: layouts/base.njk
---

<div class="w-full page post">
    {% if title %}
        <div class="post-title container m-auto text-center px-6 flex mt-6 mb-6 md:max-w-screen-lg md:mt-12">
            <div class="text-left md:pr-32">
                <label>Article</label>
                <h1>{{ title }}</h1>
                {% if subtitle %}
                <h4>{{ subtitle | safe }}</h4>
                {% endif %}
                <p class="author">
                    <time value="{{ item.date }}">{{ date  | shortDate }}</time>
                    |
                    {% set comma = joiner() %}
                    {%- for author in authors %}
                    {{ comma() }} {{ team[author].name }}
                    {%- endfor %}
                </p>
            </div>
        </div>
    {% endif %}
    <div class="blog nohero w-full pt-6 pb-24 ff-bg-light">
        <div class="container m-auto text-left px-6 md:max-w-screen-lg">
            <a class="block mb-4 flex align-center gap-1" href="/blog">
                {% include "components/icons/chevron-left.svg" %}
                Back to Blog Posts
            </a>
            <div class="prose">
                <div>{% if video %}<iframe width="560" height="315" src="https://www.youtube.com/embed/{{video}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                     {% elif image %}<img class="w-full h-auto" src="{{image}}" />
                     {% else %}{{ page.url | generatePostSVG |safe}}{% endif %}
                </div>
                {{ content | safe }}
            </div>
            <div class="mt-12 pt-6 flex flex-col border-t-2">
                <h3 class="mb-6">Sign up for updates</h3>
                <script charset="utf-8" type="text/javascript" src="//js-eu1.hsforms.net/forms/embed/v2.js"></script>
                <script>
                    hbspt.forms.create({
                        region: "eu1",
                        portalId: "26586079",
                        formId: "159c173d-dd95-49bd-922b-ff3ef243e90c",
                        onFormSubmit: function($form) {
                            capture('cta-blog-subscribe', {'position': 'article'})
                        }
                    });
                </script>
            </div>
        </div>
    </div>
</div>
