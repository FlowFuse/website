---
layout: layouts/base.njk
---
<div class="w-full nohero py-16">
    <div class="container flex flex-col m-auto text-left max-lg:px-6 md:max-w-screen-lg items-stretch">
        <label class="text-gray-400 font-medium mb-2">Whitepaper</label>
        <h1 class="md:max-w-screen-md">{{ title | safe }}</h1>
        {% if subtitle %}
        <h4 class="text-xl md:max-w-screen-sm text-gray-400 -mt-3 mb-2">{{ subtitle | safe }}</h4>
        {% endif %}
        <div class="ff-prose whitepaper w-full flex flex-col md:flex-row md:gap-10 mt-3">
            <div class="w-full flex-grow main-content prose">
                <div class="ff-image-cover ff-image-rounded aspect-video mb-6">
                    {% set imageSrc = ["./", image ] | join %}
                    {% set imageDescription = ["Image representing ", title] | join %}
                    {% image imageSrc, imageDescription, [644] %}
                </div>
                {{ content | safe }}
            </div>
            <div class="w-72 flex-shrink-0 flex flex-col">
                <div>
                    <h5 class="font-medium pb-1 mb-4">Table of Contents</h5>
                    <ul id="toc" class="text-sm border-b mb-10"></ul>
                </div>
                <div class="sticky top-20">
                    <h5 class="font-medium pb-1 mb-4">Download Whitepaper</h5>
                    {% include hubspot.script %}
                </div>
            </div>
        </div>
    </div>
</div>

