<li class="w-full border bg-white rounded-lg hover:drop-shadow-lg hover:border-red-600 transition ease-in-out duration-300">
    <a href="{{ item.data.url }}" target="_blank" class="w-full h-full flex flex-col group hover:no-underline px-4 py-3">
        <div>
            <div class="text-gray-400 flex flex-row justify-betwee">
                {%- for tag in certifiedCategories -%}
                    {% if tag.value !== "certified" and tag.value in item.data.tags %}
                    <label class="w-full">
                        {{ tag.label }}
                    </label>
                    {% endif %}
                {%- endfor %}
                <div class="w-[20px]">
                    {% include "components/icons/arrow-top-right-on-square.svg" %}
                </div>
            </div>
            <h3 class="mt-1 mb-0 font-medium">{{ item.data.title }}</h3>
        </div>
        <div class="text-sm prose prose-blue md:prose-md py-1">
            {{ item.data.description | excerpt | safe }}
        </div>
    </a>
</li>
