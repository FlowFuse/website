<div class="social-proof-carousel">
    <div class="mix-blend-luminosity opacity-70 saturate-0">
    {%- for logo in collections.homeLogos | shuffle -%}
        {% set imgSrc = logo %}
        {% set imgAlt = logo | replace("images/home-logos/", "") | replace("-", " ") | replace(".png", "") | replace(".svg", "") | capitalize %}
        {% image imgSrc, imgAlt %}
    {% endfor %}
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const carousel = document.querySelector(".social-proof-carousel");
    const items = carousel.innerHTML; 
    carousel.innerHTML += items;
});
</script>