{
    "name": "FlowForge-Website",
    "version": "1.0.0",
    "description": "",
    "dependencies": {
        "@flowforge/forge-ui-components": "^0.1.1",
        "@kevingimbel/eleventy-plugin-mermaid": "^1.1.0",
        "autoprefixer": "^10.3.7",
        "postcss-import": "^14.0.2",
        "seedrandom": "^3.0.5"
    },
    "private": true,
    "devDependencies": {
        "@11ty/eleventy": "^0.12.1",
        "@11ty/eleventy-plugin-rss": "^1.1.2",
        "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
        "@tailwindcss/typography": "^0.4.1",
        "markdown-it-anchor": "^8.4.1",
        "nodemon": "^2.0.15",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.3.11",
        "postcss-cli": "^9.0.1",
        "postcss-minify": "^1.1.0",
        "spacetime": "^6.16.3",
        "tailwindcss": "^2.2.17",
        "terser": "^5.9.0",
        "vanilla-cookieconsent": "^2.6.1"
    },
    "scripts": {
        "clean": "rm -rf _site && mkdir -p _site/js",
        "start": "npm-run-all clean build:js --parallel dev:*",
        "build": "NODE_ENV=production npm-run-all clean build:js handbook docs --parallel prod:*",
        "build:js": "terser -c -m -o _site/js/cc.min.js node_modules/vanilla-cookieconsent/dist/cookieconsent.js src/js/cookies.js",
        "docs": "/bin/bash scripts/copy_docs.sh",
        "handbook": "/bin/sh scripts/copy_handbook.sh",
        "dev:docs": "[ -e ../flowforge/docs ] && nodemon -w ../flowforge/docs -e md --exec 'npm run docs' || echo 'docs not found - skipping...'",
        "dev:handbook": "[ -e ../handbook ] && nodemon -w ../handbook -e md --exec 'npm run handbook' || echo 'handbook not found - skipping...'",
        "dev:postcss": "TAILWIND_MODE=watch postcss ./src/css/style.css -o ./_site/css/style.css --config ./postcss.config.js -w",
        "prod:postcss": "postcss ./src/css/style.css -o ./_site/css/style.css --config ./postcss.config.js",
        "dev:eleventy": "ELEVENTY_ENV=development npx @11ty/eleventy --serve --quiet",
        "prod:eleventy": "npx @11ty/eleventy"
    },
    "keywords": [],
    "author": "Nick O'Leary",
    "license": "Apache-2.0"
}
